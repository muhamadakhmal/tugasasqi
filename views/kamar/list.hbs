<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">


<center>
    <h3 style="font-family:'Courier New', Courier, monospace; color:white"><b>
            Informasi Kamar</b></h3>
</center>
<hr>

<a href="/admin/kamar/tambah" class="btn btn-md btn-primary" style="float: right;"><i class="fa fa-plus"
        aria-hidden="true">
        Tambah Kamar
    </i>
</a>
<br>
<br>

<div class="mb-2"></div>
<table class="table table-striped">

    <thead>
        <tr style="font-family:'Times New Roman', Times, serif; text-align:center;color:white; background: linear-gradient(#000428
,
#004e92)">

            <b>
                <th scope="col">No Kamar</th>
                <th scope="col">Jumlah TempatTidur</th>
                <th scope="col">Fasilitas</th>
                <th scope="col">Harga/Malam</th>
                <th scope="col">Opsi</th>
            </b>
        </tr>
    </thead>

    <tbody>
        {{#each kamar}}
        <tr style="text-align: center;">
            <th scope="row">{{ no }}</th>
            <td>{{ jml }}</td>
            <td>{{ fasilitas }}</td>
            <td>{{ harga }}</td>

            <td style="text-align: center;">
                <button type="button" class="btn btn-outline-warning"><a
                        style="text-decoration: none; color: black; font-family:'Times New Roman', Times, serif"
                        href="/admin/kamar/edit/{{ id }}"><i class="fa fa-pencil-square-o" aria-hidden="true">
                            Ubah</a></i>
                </button>&nbsp;|&nbsp;
                <button type="button" class="btn btn-outline-danger"><a
                        style="text-decoration: none; color: black; font-family:'Times New Roman', Times, serif"
                        href="/admin/kamar/{{ id }}/delete">Hapus</a>
                </button>
            </td>

        </tr>
        {{/each}}
    </tbody>
</table>